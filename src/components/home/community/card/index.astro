---

// IMPORT ASTRO ATOMS
import Button from "@/atoms/button/index.astro"
import ParagraphSmall from "@/atoms/paragraph/small/index.astro"

// GET ASTRO PROPS
const {

    buttontext,
    description,
    subtitle,
    title,

} = Astro.props

---
<div class="flex flex-col my-10 md:mx-3 md:my-1">
    <h2 class="mb-5 text-black text-3xl font-bold">{ title }</h2>

    <h3 class="mb-5 text-black text-[16px] font-semibold">{ subtitle }</h3>

    <ParagraphSmall>{ description }</ParagraphSmall>

    <div class="mt-3">
        <Button>{ buttontext }</Button>
    </div>
    
</div>
