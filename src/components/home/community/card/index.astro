---

// IMPORT ASTRO ATOMS
import Button from "@/atoms/button/index.astro"
import HeadingTwo from "@/atoms/headings/two/index.astro"
import ParagraphSmall from "@/atoms/paragraph/small/index.astro"

// GET ASTRO PROPS
const {

    buttontext,
    description,
    subtitle,
    title,

} = Astro.props

---

<div class="flex flex-col gap-8">
    <div class="flex flex-col gap-4">
        <HeadingTwo>{ title }</HeadingTwo>
        <h3 class=" text-black text-[16px] font-semibold">{ subtitle }</h3>
        <ParagraphSmall>{ description }</ParagraphSmall>
    </div>
    <div class="">
        <Button>{ buttontext }</Button>
    </div>   
</div>
