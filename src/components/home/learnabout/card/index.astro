---

// IMPORT ASTRO ATOMS
import ParagraphMedium from "@/atoms/paragraph/medium/index.astro"

// GET ASTRO PROPS
const {

    alternative_text,
    description,
    source,
    title,

} = Astro.props

---
<div class="flex flex-col gap-2">
    <div class="h-56">
        <a href="#">
            <img
                alt={ alternative_text }
                class="object-cover h-full"
                src={ source }
            />
        </a>
    </div>
    <div class="flex flex-col gap-2">
        <h3 class="text-black text-lg font-bold">{ title }</h3>
        <ParagraphMedium>{ description }</ParagraphMedium>
    </div>
</div>
