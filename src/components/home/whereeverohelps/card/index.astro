---

// IMPORT ASTRO ATOMS
import ParagraphSmall from "@/atoms/paragraph/small/index.astro"

// GET ASTRO PROPS
const {

    description,
    link_text,
    sub_title,
    title,

} = Astro.props

---

<div class="flex flex-col gap-3 my-6">
    <div class="flex flex-col gap-2">
        <h3 class="text-2xl font-bold">{ title }</h3>
        <h4 class="text-orange-500 text-sm font-semibold">{ sub_title }</h4>
        <ParagraphSmall>{ description }</ParagraphSmall>
    </div>
    <div class="border-b-2 border-gray-200">
        <a href="#">
            <p class="text-gray-600 hover:text-orange-500 text-lg font-semibold">{ link_text }</p>
        </a>
    </div>
</div>
