---

// IMPORT ASTRO LAYOUTS
import Container from "@/layouts/container/index.astro"

// IMPORT ASTRO COMPONENTS
import HelpsCard from "@/components/home/helps/card/index.astro"

// IMPORT ASTRO ATOMS
import HeadingThreeCenter from "@/atoms/headings/three/three-text-center/index.astro"
import HeadingTwo from "@/atoms/headings/two/index.astro"

// HARDCODED DATA
const data = {

	sub_title: "We support the unique needs of the Health and Human Services community.",
	title: "Who eVero Helps",

}

---

<Container>
	<div class="my-10 flex flex-col gap-10">
		<div class="flex flex-col gap-6 items-center justify-center">
			<HeadingTwo>{ data.title }</HeadingTwo>
			<HeadingThreeCenter>{ data.sub_title }</HeadingThreeCenter>
		</div>
		<!-- Cards -->
		<div class="flex flex-col gap-8">
			<div class="flex flex-col md:flex-row md:flex-wrap gap-8 items-center justify-center">
				<HelpsCard
					alternativeText="agencies"
					description="Streamlined process flows that boost transparency, compliance, and productivity."
					source="images/Agencies.webp"
					title="PROVIDER AGENCIES"
				/>
				<HelpsCard
					alternativeText="families"
					description="Intuituve tools empower individuals to proactively manage their Self-Directed care."
					source="images/Families.webp"
					title="INDIVIDUALS & FAMILY"
				/>
				<HelpsCard
					alternativeText="fiscal"
					description="Automation and integrations help simplify budgeting, documentation and billing."
					source="images/Fiscal-Intermediaries.webp"
					title="FISCAL INTERMEDIARIES"
				/>
				<HelpsCard
					alternativeText="brokers"
					description="Unified caseload management with real-time insight into budget usage and trends."
					source="images/Brokers.webp"
					title="SUPPORT BROKERS"
				/>
				<HelpsCard
					alternativeText="selfhired"
					description="Easy and accurate EVV and service data collection right at the point of care."
					source="images/Self-Hired.webp"
					title="SELF-HIRED STAFF"
				/>
			</div>
		</div>
		<div class="flex items-center justify-center px-44">
			<p class="text-xl text-center text-gray-500">
				<span class="text-orange-400">The eVero platform</span>
				creates a digital ecosystem that empowers the entire care continuum
				to work together to ensure the best care possible
			</p>
		</div>
	</div>
</Container>
