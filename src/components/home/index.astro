---

// GET ASTRO PROPS
const { home_data } = Astro.props

// IMPORT ASTRO COMPONENTS
import WhyEvero from "@/components/home/why-evero/index.astro"
import Community from "@/components/home/community/index.astro"
import ContactUs from "@/components/home/contact/index.astro"
import Featured from "@/components/home/featured-blog/index.astro"
import Footer from "@/components/common/footer/index.astro"
import Header from "@/components/common/header/index.astro"
import Helps from "@/components/home/helps/index.astro"
import Hero from "@/components/home/hero/index.astro"
import Learn from "@/components/home/learn-about/index.astro"
import Subscribe from "@/components/home/subscribe/index.astro"
import Testimonial from "@/components/home/testimonials/index.astro"
import WhereEverohelps from "@/components/home/where-evero-helps/index.astro"

let home_sections_array = {

}
home_data.map( ( home_sections ) => {

    home_sections_array = {

        ...home_sections_array,
        [ home_sections.properties.slug.string ]: home_sections

    }

})

// HERO DATA ARRAY
const hero_data_array = []

hero_data_array.push(
    ...[

        home_sections_array["hero-1"],
        home_sections_array["hero-2"],
        home_sections_array["hero-3"],
        home_sections_array["hero-4"],
        home_sections_array["hero-5"]

    ]
)

// WHY EVERO DATA ARRAY
const why_evero_array = []

why_evero_array.push(
    ...[

        home_sections_array["why-evero-card-1"],
        home_sections_array["why-evero-card-2"],
        home_sections_array["why-evero-card-3"],

    ]
)

// HELPS DATA ARRAY
const helps_array = []

helps_array.push(
    ...[

        home_sections_array["helps-card-1"],
        home_sections_array["helps-card-2"],
        home_sections_array["helps-card-3"],
        home_sections_array["helps-card-4"],
        home_sections_array["helps-card-5"],

    ]
)

// COMMUNITY DATA ARRAY
const community_array = []

community_array.push(
    ...[

        home_sections_array["community-card-1"],
        home_sections_array["community-card-2"],

    ]
)

// FEATURED BLOG DATA ARRAY
const featured_blog_array = []

featured_blog_array.push(
    ...[

        home_sections_array["featured-blog-card-1"],
        home_sections_array["featured-blog-card-2"],
        home_sections_array["featured-blog-card-3"],
        home_sections_array["featured-blog-card-4"],

    ]
)

---

<Header />
<Hero
    data={ hero_data_array }
/>
<WhyEvero
    data={ home_sections_array["why-evero"] }
    why_evero_array={ why_evero_array }
/>
<Helps 
    data={ home_sections_array["helps"] }
    data_bottom={ home_sections_array["helps-bottom"] }
    helps_array={ helps_array }
/>
<Learn />
<WhereEverohelps/>
<Community 
    data={ home_sections_array["community"] }
    community_array={ community_array }
/>
<Featured
    data_main={ home_sections_array["featured-blog"] }
    featured_blog_array={ featured_blog_array }
/>
<Testimonial/>
<Subscribe/>
<ContactUs/>
<Footer/>
