---

// IMPORT ASTRO ATOMS
import ParagraphMediumCenter from "@/atoms/paragraph/medium/medium-center/index.astro"

// GET ASTRO PROPS
const {

    source,
    alternative_text,
    title,
    description,

} = Astro.props

---

<div class="flex flex-col items-center justify-center rounded-3xl bg-gray-100 px-12 py-8">
    <div class="size-40">
        <img
            alt={ alternative_text }
            src={ source }
            class="w-full h-full"
        />
    </div>
    <div class="flex flex-col gap-6">
        <h4 class="text-3xl font-medium text-center">
            <span class="text-4xl text-orange-400 underline">e</span>{ title }
        </h4>
        <ParagraphMediumCenter>{ description }</ParagraphMediumCenter>
    </div>
</div>
