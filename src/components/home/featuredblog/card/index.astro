---

// GET ASTRO PROPS
const {

    alternative_text,
    date,
    description,
    link,
    source,
    title,

} = Astro.props

---

<div class="!flex flex-col gap-4 p-6">
    <div class="flex justify-center rounded-2xl border border-gray-300 w-full h-64">
        <img
            alt={ alternative_text }
            class="w-full object-contain rounded-2xl"
            src={ source }
        />
    </div>
    <h3 class="text-black text-xl font-medium">{ title }</h3>
    <p class="text-gray-400 text-sm font-medium">{ date }</p>
    <p class="text-[16px]">{ description }</p>
    <div>
        <a href={ link }>
            <button class="text-orange-500 hover:text-gray-500 text-[16px] font-semibold border-b-2 border-orange-100 py-1">Read More</button>
        </a>
    </div>
</div>
