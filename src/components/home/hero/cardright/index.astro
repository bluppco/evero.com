---

// IMPORT ASTRO ATOMS
import HeadingOne from "@/atoms/headings/one/index.astro"
import HeadingThree from "@/atoms/headings/three/index.astro"
import ParagraphSmallCenter from "@/atoms/paragraph/small/small-center/index.astro"
import PrimaryButton from "@/atoms/button/primary-button/index.astro"

// GET ASTRO PROPS
const {

    alternative_text,
    button_text,
    description,
    source,
    sub_title,
    title,

} = Astro.props

---

<div class="grid md:grid-cols-2 gap-4">
    <div class="hidden md:block">
        <img
            alt={ alternative_text }
            class="w-full h-full object-cover rounded-r-full"
            src={ source }
        />
    </div>
    <div class="py-16 xl:pr-28 flex items-center justify-center">
        <div class="space-y-6 p-11 flex flex-col items-center justify-center md:items-start">
            <HeadingOne>{ title }</MainHeading>
            <ParagraphSmallCenter>{ description }</ParagraphSmallCenter>
            <HeadingThree>{ sub_title }</HeadingThree>
            <PrimaryButton>{ button_text }</PrimaryButton>
        </div>
    </div>
</div>
